# Fabio Load Balancer Environment Configuration

# Required Railway configuration
PORT=8080

# Backend routing configuration
FABIO_ROUTE_PATH=/
FABIO_BACKEND_PROTOCOL=http
FABIO_BACKEND_HOST=core.railway.internal
FABIO_BACKEND_PORT=8000
FABIO_BACKEND_PATH=/
FABIO_ROUTE_OPTIONS=strip=/

# Health check configuration
FABIO_HEALTH_PATH=/health
FABIO_HEALTH_CHECK=check:http://200

# Performance tuning
FABIO_MAX_CONN=10000
FABIO_READ_TIMEOUT=30s
FABIO_WRITE_TIMEOUT=30s
FABIO_IDLE_TIMEOUT=120s
FABIO_SHUTDOWN_WAIT=10s

# Connection settings
FABIO_DIAL_TIMEOUT=10s
FABIO_KEEPALIVE_TIMEOUT=120s

# Load balancing strategy (rnd or rr)
FABIO_LB_STRATEGY=rnd

# Logging configuration
FABIO_LOG_LEVEL=INFO
FABIO_LOG_ACCESS_TARGET=stdout
FABIO_LOG_ACCESS_FORMAT=combined
